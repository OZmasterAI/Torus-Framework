{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "0"
  },
  "permissions": {
    "allow": [
      "mcp__memory__get_memory",
      "mcp__memory__search_knowledge",
      "mcp__memory__remember_this"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write|NotebookEdit|Bash|Task|Skill|WebFetch|WebSearch|LSP|EnterWorktree",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/enforcer_shim.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/tracker.py\"",
            "timeout": 3
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/auto_commit.py\" stage",
            "timeout": 3
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/auto_format.py\"",
            "timeout": 3
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/boot.py\"",
            "timeout": 15
          },
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/integrity_check.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/user_prompt_capture.py\"",
            "timeout": 3
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/auto_commit.py\" commit",
            "timeout": 5
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/auto_approve.py\"",
            "timeout": 3
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/subagent_context.py\"",
            "timeout": 3
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/pre_compact.py\"",
            "timeout": 3
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/session_end.py\"",
            "timeout": 30
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/tg_mirror.py\"",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/stop_cleanup.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/event_logger.py\" --event SubagentStop",
            "timeout": 3
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/event_logger.py\" --event PostToolUseFailure",
            "timeout": 3
          },
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/failure_recovery.py\"",
            "timeout": 3
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/event_logger.py\" --event Notification",
            "timeout": 3
          }
        ]
      }
    ],
    "ConfigChange": [
      {
        "matcher": "user_settings|project_settings",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/config_change.py\"",
            "timeout": 3
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "python3 \"$HOME/.claude/hooks/statusline.py\""
  },
  "enabledPlugins": {
    "pyright-lsp@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": false,
    "pr-review-toolkit@claude-plugins-official": false,
    "code-review@claude-plugins-official": false,
    "hookify@claude-plugins-official": false,
    "skill-creator@claude-plugins-official": false,
    "code-simplifier@claude-plugins-official": false
  },
  "skipDangerousModePermissionPrompt": true,
  "disabled_hooks": {
    "TeammateIdle": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/event_logger.py\" --event TeammateIdle",
            "timeout": 3
          }
        ]
      }
    ],
    "TaskCompleted": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/event_logger.py\" --event TaskCompleted",
            "timeout": 3
          }
        ]
      }
    ]
  },
  "contextCompactionThreshold": 0.85,
  "spinnerTips": [
    "Memory first — search_knowledge before building or fixing",
    "Read before edit — Gate 1 blocks edits on unread files",
    "Prove it works — run tests before claiming fixed",
    "Save to memory — remember_this after every fix or decision",
    "Causal chain — record_attempt → fix → record_outcome",
    "Protect main context — delegate heavy ops to sub-agents",
    "Plan mode — explore + plan → ExitPlanMode → approval → implement",
    "Model cost — haiku for search, sonnet for work, opus for complex",
    "Gate 5 — verify changes before making more edits",
    "Frustration signals — 'again', 'still', 'why', ALL CAPS = stop and verify"
  ]
}
